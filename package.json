{
  "name": "jaktdagboken",
  "version": "1.0.0",
  "description": "jaktdagboken - hunting diary",
  "main": "app.js",
  "scripts": {
    "test": "mocha --timeout 10000",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "devStart": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/1dv430/dp222gj-project.git"
  },
  "keywords": [
    "hunting",
    "diary",
    "jakt"
  ],
  "author": "Denny Petersson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/1dv430/dp222gj-project/issues"
  },
  "homepage": "https://github.com/1dv430/dp222gj-project#readme",
  "dependencies": {
    "bcrypt": "^3.0.6",
    "concurrently": "^4.1.0",
    "cookie-parser": "^1.4.4",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "gridfs-stream": "^1.1.1",
    "helmet": "^3.18.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.5.4",
    "multer": "^1.4.1",
    "multer-gridfs-storage": "^3.2.3"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "mocha": "^6.1.4",
    "node-mocks-http": "^1.7.5",
    "nodemon": "^1.18.11",
    "prettier": "^1.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  }
}
